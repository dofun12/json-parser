<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="principal" style="-fx-background-color: transparent; -fx-border-radius: 10; -fx-border-color: #ddd;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ProgressIndicator prefHeight="100" prefWidth="100" />
      <HBox alignment="CENTER" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="loadingText" text="Carregando..." textAlignment="CENTER" wrapText="true" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>
